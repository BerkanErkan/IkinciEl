
@{
    ViewBag.Title = "AracDetayIlan";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";


}
@model IkinciEl.UI.Models.VM.AracDBVM
<h2>AracDetayIlan</h2>

@section ustMenu{

    @using (Html.BeginForm("AracDetayIlan", "AracList", FormMethod.Post))
    {
        
        for (int i = 0; i < Model.tramerVMs.Count; i++)
        {
           
            @Html.HiddenFor(a => a.tramerVMs[i].TramerID)
            @Html.HiddenFor(a => a.tramerVMs[i].ParcaID)
            <div class="col-md-4">
                @Html.HiddenFor(a => a.tramerVMs[i].TramerBilgisiDurumID)

            </div>
        }
        <div class="row" style="margin-top: 20px;">
            @Html.HiddenFor(a => a.IlanbilgisiID)


            <div class="col-md-4">
                <label for="inputEmail4" class="form-label">İlan Başlığı</label>
                @Html.TextBoxFor(a => a.IlanBaslıgi, new { @class = "form-control" })

            </div>
        </div>
        <div class="row" style="margin-top: 20px;">
            <div class="col-md-4" style="height: 200px; overflow: auto;">
                <label for="inputCity" class="form-label">İlan Detayı</label>
                @Html.TextBoxFor(a => a.IlanAckilma, new { @class = "form-control" })
            </div>


            @Html.HiddenFor(a => a.AracID)

            @Html.HiddenFor(a => a.KurumsalMİ)
            @Html.HiddenFor(a => a.SirketID)

            @Html.HiddenFor(a => a.StatuID)

            @Html.HiddenFor(a => a.AracFiyati)

            @Html.HiddenFor(a => a.Plaka)

            @Html.HiddenFor(a => a.AracMarkaID)

            @Html.HiddenFor(a => a.AracModelID)

            @Html.HiddenFor(a => a.GovdeTipiID)

            @Html.HiddenFor(a => a.YakıtTipiID)

            @Html.HiddenFor(a => a.VitesTipiId)

            @Html.HiddenFor(a => a.Kilometre)

            @Html.HiddenFor(a => a.RenkID)

            @Html.HiddenFor(a => a.DonanimID)



            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                <input type="submit" name="name" value="Kaydet" class="btn btn-primary" />
            </div>

        </div>


    }


}

@section altMenu{
}
